<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.find.DiaryTypeActivity">

    <RelativeLayout
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/defualt_window_background"
        android:orientation="vertical"
     >

        <LinearLayout
            android:id="@+id/back_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/toolbar_left_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/toolbar_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/width30"
        android:gravity="center_horizontal"
        android:text="您想发布什么类型日记？"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_20" />

    <LinearLayout
        android:id="@+id/ll_kangfuqi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/width20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="康复期日记"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支持术前术后康复期日记记录~"
            android:textSize="@dimen/txt_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tuwenriji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/width20">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="图文日记"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支持图文，写下您的日记吧~"
            android:textSize="@dimen/txt_16" />

    </LinearLayout>
</LinearLayout>