<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width80"
    android:layout_height="80dp"
    >

    <com.likeit.aqe365.view.RoundImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic"
        roundiv:left_bottom_radius="4dp"
        roundiv:left_top_radius="4dp"
        roundiv:right_bottom_radius="4dp"
        roundiv:right_top_radius="4dp" />
</RelativeLayout>