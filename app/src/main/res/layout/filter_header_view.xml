<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="商品价格" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width40"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="价格区间(元)" />

        <EditText
            android:id="@+id/ed_low_price"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="最低价"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---" />

        <EditText
            android:id="@+id/ed_high_price"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="最高价"
            android:inputType="number" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="商品属性" />


    <GridView
        android:id="@+id/yuguo_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width90"
        android:layout_marginTop="14dp"
        android:horizontalSpacing="14dp"
        android:numColumns="3"
        android:verticalSpacing="14dp"></GridView>


</LinearLayout>