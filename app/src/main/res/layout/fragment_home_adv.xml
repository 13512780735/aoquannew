<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.home.HomeAdvFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/width80"
        android:layout_marginLeft="@dimen/width40"
        android:layout_marginRight="@dimen/width40"
        android:layout_marginTop="@dimen/width80"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/width40"
            android:layout_margin="@dimen/dp_5"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_del" />
    </LinearLayout>
</RelativeLayout>