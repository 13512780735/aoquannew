<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_good_details_shop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width70"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <com.likeit.aqe365.view.RatioImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/width50"
        android:layout_height="@dimen/width50"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/tv_shopdesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="" />
    </LinearLayout>

    <com.likeit.aqe365.view.BorderTextView
        android:id="@+id/rightnavtext"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_4"
        app:strokeWidth01="1dp"
        app:cornerRadius="@dimen/dp_8"
        android:layout_height="wrap_content" />
</LinearLayout>