<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:layout_margin="5dip"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.likeit.aqe365.view.RatioImageView
        android:id="@+id/goods_listview_avatar01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/default_pic"
        app:is_width_fix_drawable_size_ratio="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_text_color" />

        <TextView
            android:id="@+id/tv_size01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text=""
            android:textColor="@color/black_text_color" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/theme_bg_tex" />

            <TextView
                android:id="@+id/tv_buy01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/txt_14"
                android:text="购买"
                android:textColor="@color/theme_bg_tex" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/shape_button_red_border_bg_1"
                android:padding="2dp"
                android:text="劵"
                android:textColor="@color/theme_bg_tex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_button_red_border_bg_1"
                android:padding="2dp"
                android:text="赠"
                android:textColor="@color/theme_bg_tex" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="原价："
                android:textColor="@color/black_text_color"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_old_price01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_o"
                android:padding="@dimen/dp_5"
                android:text="¥ 100"
                android:textColor="@color/black_text_color"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_sales01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_old_price01"
                android:padding="@dimen/dp_5"
                android:text="销量"
                android:textColor="@color/black_text_color"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>