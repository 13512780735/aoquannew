<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_indent_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_indent_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:text="" />

        <TextView
            android:id="@+id/tv_indent_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/icon_more"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text=""
            android:textColor="@color/theme_bg_tex" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>

    <TextView
        android:id="@+id/tv_indent_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_shop_logo"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text=""
        android:textColor="@color/black_text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:textColor="@color/theme_bg_tex" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/ll_indent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp_8"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_cancel_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_del_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_appraise_indent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_check_wuLiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_confirm_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:textColor="@color/white"
            android:visibility="gone"
            app:contentBackColor="@color/theme_bg_tex"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            app:strokeColor01="@color/theme_bg_tex"
            app:strokeWidth01="1dp" />

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_recover_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            app:cornerRadius="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:visibility="gone"
            app:contentBackColor="@color/white"
            app:strokeColor01="#999999"
            app:strokeWidth01="1dp" />

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"></View>
</LinearLayout>