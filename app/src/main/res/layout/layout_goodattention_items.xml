<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width100"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/ch_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/check_box_bg"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/dp_10" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tv_goods_picture"
        android:layout_width="@dimen/width80"
        android:layout_height="@dimen/width80"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_goods_new_price"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black_text_color"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_goods_old_price"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/tv_goods_new_price"
                android:gravity="center_vertical"
                android:textColor="@color/register_text_color"
                android:layout_marginLeft="@dimen/width20"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>