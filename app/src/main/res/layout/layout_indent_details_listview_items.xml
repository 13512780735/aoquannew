<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shop_avatar"
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/width50"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black_text_color" />

                <TextView
                    android:id="@+id/tv_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_button"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="@dimen/width40">

        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            app:cornerRadius="10dp"
            app:strokeColor01="@color/theme_bg_tex"
            android:textColor="@color/theme_bg_tex"
            app:contentBackColor="#FFFFFF"
            app:strokeWidth01="1dp"
            android:paddingLeft="@dimen/dp_8"
            android:visibility="gone"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5"
            android:text="查看退款申请进度" />
      <!--  <com.likeits.simple.view.BorderTextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            app:cornerRadius="10dp"
            android:visibility="gone"
            app:strokeColor01="@color/theme_bg_tex"
            android:textColor="@color/theme_bg_tex"
            app:contentBackColor="#FFFFFF"
            app:strokeWidth01="1dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5"
            android:text="申请退款" />-->
        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            app:cornerRadius="10dp"
            app:strokeColor01="@color/theme_bg_tex"
            android:textColor="@color/theme_bg_tex"
            app:contentBackColor="#FFFFFF"
            app:strokeWidth01="1dp"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5"
            android:text="评价" />
        <com.likeit.aqe365.view.BorderTextView
            android:id="@+id/tv_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            app:cornerRadius="10dp"
            android:visibility="gone"
            app:strokeColor01="@color/theme_bg_tex"
            android:textColor="@color/theme_bg_tex"
            app:contentBackColor="#FFFFFF"
            app:strokeWidth01="1dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_5"
            android:text="追加评价" />
    </LinearLayout>
</LinearLayout>