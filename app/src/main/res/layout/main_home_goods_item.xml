<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.likeits.simple.view.RatioImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_height_fix_drawable_size_ratio="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width45"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/dp_4"
        android:textSize="@dimen/txt_11"
        android:text="xxx"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_ordprice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width25"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4">

        <LinearLayout
            android:id="@+id/ll_ordPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_10"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="xxx" />

            <TextView
                android:id="@+id/tv_price02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/txt_10"
                android:gravity="center_vertical"
                android:text="xxx" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_10"
            android:text="xxx" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width30"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_10"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="xxx" />

        <com.likeits.simple.view.TextViewBorder
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_4"
            android:text="购买"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/text_red"
            android:background="@drawable/shape_search_round_5"
            app:tvborderColor="@color/text_red" />

    </RelativeLayout>
</LinearLayout>