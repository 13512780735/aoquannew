<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="xxx" />

        <TextView
            android:id="@+id/tv_set1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="xxx" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="@dimen/width20"
        android:orientation="horizontal">
        <com.likeits.simple.view.CircleImageView
            android:id="@+id/iv_avatar1"
            android:layout_width="@dimen/width60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/width60" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/width20"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:gravity="left"
                android:text="小飞机" />

            <TextView
                android:id="@+id/tv_vip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:gravity="left"
                android:text="用户等级" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_balance011"
                    android:layout_width="@dimen/width60"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="余额" />

                <TextView
                    android:id="@+id/tv_balance1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="99.99" />

                <com.likeits.simple.view.TextViewBorder
                    android:id="@+id/tv_recharge1"
                    android:layout_width="@dimen/width60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/width20"
                    android:gravity="center_horizontal"
                    android:text="充值" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_integral011"
                    android:layout_width="@dimen/width60"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="积分" />

                <TextView
                    android:id="@+id/tv_integral1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="80" />

                <com.likeits.simple.view.TextViewBorder
                    android:id="@+id/tv_exchange1"
                    android:layout_width="@dimen/width60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/width20"
                    android:gravity="center_horizontal"
                    android:text="兑换" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>