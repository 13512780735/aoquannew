<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/width30"
    android:paddingBottom="@dimen/width30"
    android:layout_height="wrap_content">

    <com.likeits.simple.view.BorderTextView
        android:id="@+id/tv_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cornerRadius="@dimen/dp_5"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="修改密码"
        app:strokeWidth01="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.likeits.simple.view.BorderTextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width40"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:strokeWidth01="1dp"
        android:gravity="center"
        android:text="退出登录"
        app:cornerRadius="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_pwd" />
</android.support.constraint.ConstraintLayout>