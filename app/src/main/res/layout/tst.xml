<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.likeit.aqe365.view.BorderTextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:contentBackColor="@color/white"
        app:contentPressedColor="@color/colorAccent"
        app:cornerRadius="@dimen/dp_10"
        app:strokeWidth01="2dp"
        app:strokeColor="@color/colorAccent"
        android:layout_margin="20dp"
        android:clickable="true"/>

    <com.likeit.aqe365.view.BorderTextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:contentBackColor="#fff"
        app:contentPressedColor="#ddd"
        app:cornerRadius="25dp"
        android:layout_margin="20dp"
        android:clickable="true"/>

</LinearLayout>